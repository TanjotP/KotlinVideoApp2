<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/thumbImage"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/videoText"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/thumbImage"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/channelProfileImage"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textStyle="bold"/>
    <TextView
            android:text="Channel Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/channelNameText"
            app:layout_constraintTop_toBottomOf="@+id/videoText"
            app:layout_constraintStart_toStartOf="@+id/videoText"
            app:layout_constraintEnd_toEndOf="@+id/videoText" android:paddingBottom="16dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/channelProfileImage"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/thumbImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@+id/channelNameText"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="16dp"/>
</android.support.constraint.ConstraintLayout>